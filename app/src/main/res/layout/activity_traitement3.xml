<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Traitement3">
    <include layout="@layout/menu"/>
    <include layout="@layout/footer"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="10dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="100"
        android:layout_marginTop="80dp"
        android:progressDrawable="@drawable/progress_barre_color"/>

    <RelativeLayout
        android:id="@+id/DeclarationEvenementIndesirable1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/borderlefttoprightbottomred"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="130dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="2 Traitement evènement indésirable"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/DeclarationSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/borderleftrightbeige"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/DeclarationEvenementIndesirable1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            android:text="Destinataire :"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="15dp"
            android:backgroundTint="@color/vert"
            android:text="Transférer à"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginRight="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lesite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/borderleftrightbeige"
        android:layout_below="@+id/DeclarationSite"
        android:layout_marginHorizontal="40dp">

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Aucun"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:background="@drawable/borderlefttoprightbottomwhite"
            android:paddingBottom="30dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Historiquetraitement1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/borderleftrightbeige"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/lesite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="Historique traitements :"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons_below"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginVertical="10dp"/>

<!--        <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--            android:id="@+id/floatingActionButton"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:clickable="true"-->
<!--            app:srcCompat="@android:drawable/arrow_down_float"-->
<!--            android:layout_marginRight="30dp"-->
<!--            android:layout_marginBottom="20dp"/>-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Historiquetraitement2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="30dp"
        android:background="@drawable/borderleftbottomrightgrey"
        android:layout_below="@+id/Historiquetraitement1"
        android:layout_marginHorizontal="40dp">

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:background="@drawable/borderlefttoprightbottomwhite"
            android:paddingBottom="40dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingVertical="10dp"
        android:layout_below="@+id/Historiquetraitement2"
        android:layout_marginHorizontal="40dp">

        <Button
            android:id="@+id/Precedent10"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="10dp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/bleu4"
            android:text="Précédent"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/Suivant11"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/bleu4"
            android:text="Suivant"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>